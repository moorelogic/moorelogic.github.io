body {
    font-family: Arial, sans-serif;
    margin: 20px;
    background-color: lightgrey; /* Light grey for the page background */
    color: whitesmoke; /* Text color for better readability */
}

.container {
    width: 400px;
    margin: auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 20px;
    background-color: black; /* Black background for the app interface */
}

.title-bar {
    background-color: darkgoldenrod; /* White background for the title bar */
    color: black; /* Black text for contrast */
    padding: 15px;
    text-align: center;
    font-weight: bold;
    border-radius: 10px 10px 0px 0px; /* Rounded corners for the top of the container */
    margin-top: 0px;
    margin-bottom: 20px;
    margin-left: 0px;
    margin-left: 0px;
}

.section h3 {
    margin-bottom: 7px; /* Reduces spacing below the title to 10px */
}

.section select {
    width: 300px;
}

.radio-group {
    margin: 7.5px 0;
}

.input-group {
    display: flex;
    align-items: center;
}

button {
    background-color: #444; /* Dark grey for buttons */
    color: white;
    border: none;
    padding: 5px 10px;
    margin-left: 10px;
    cursor: pointer;
    border-radius: 5px;
}

button:hover {
    background-color: darkgoldenrod; /* Slightly lighter grey on hover */
}

button:disabled,
button[disabled]{
  border: 1px solid #999999;
  background-color: #cccccc;
  color: #666666;
}

.clear-button {
    margin-bottom: 10px; /* Adds 10px padding below the Clear button */
}

textarea {
    width: 94%;
    height: 100px; /* Fixed height */
    resize: none; /* Prevent resizing */
    overflow-y: auto; /* Enable vertical scrolling */
    overflow-x: hidden; /* Prevent horizontal scrolling */
    font-family: Arial, sans-serif; /* Match the overall font */
    background-color: whitesmoke; /* Ensure consistency with the dark theme */
    color: black; /* Text color for readability */
    border: 1px solid #444; /* Border for clear separation */
    padding: 10px; /* Padding for better text readability */
}

.logo {
    text-align: left;
    font-style: bold;
    font-size: 80px;
    margin-top: 20px;
}
